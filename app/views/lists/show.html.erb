<h1><%=@list.name%></h1>
<hr>
<%@bookmarks.each do |bookmark|%>
  <ul>
   <li>
    <p>Movie: <%=bookmark.movie.title%> </p>
    <p>Rating: <%=bookmark.movie.rating.round(1)%> </p>
    <p>Comment: <%=bookmark.comment%></p>
    <%=link_to "Delete movie", bookmark_path(bookmark), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
   </li>
  </ul>
<%end%>

<hr>
<%=link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-success"%>
<%=link_to "Back", lists_path, class: "btn btn-primary"%>
